  "main": "dist/style.css",
  "module": "style.scss",
  "files": [
    "dist",
    "*.scss"
  ],
  "scripts": {
    "build": "sass style.scss:dist/style.css --style compressed",
    "watch": "sass style.scss:dist/style.css --watch",
    "dev": "sass style.scss:dist/style.css --watch --style expanded",
    "lint": "stylelint \"**/*.scss\"",
    "format": "prettier --write \"**/*.scss\"",
    "test": "jest",
    "prepare": "yarn build"
  },
  "dependencies": {},
