    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-scss-transform": "^1.0.3",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "sass": "^1.70.0",
    "stylelint": "^16.2.1",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-scss": "^6.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
